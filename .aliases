alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gca='git commit --amend'
alias gcp='git cherry-pick'
alias gch='git checkout'
alias gd='git diff'
alias gf='git fetch'
alias gl='git log --decorate --graph'
alias gm='git merge'
alias gmn='git merge --no-ff'
alias gmv='git mv'
alias gp='git pull'
alias gr='git rebase --rebase-merges'
alias gri='git rebase --rebase-merges --interactive'
alias gra='git rebase --abort'
alias grc='git rebase --continue'
alias grs='git reset'
alias grsh='git reset --hard'
alias gs='git status'
alias gsh='git show'
alias gst='git stash'
alias gstp='git stash pop'
alias gstl='git stash list'

alias ggr='git rebase --preserve-merges'                 # deprecated as of 2.22
alias ggri='git rebase --preserve-merges --interactive'  # deprecated as of 2.22

# git "super status" (relies on aliases defined above)
alias gss='echo "_________________________________________DIFF";     gd;   echo ""; \
           echo "_________________________________________STATUS";   gs;   echo ""; \
           echo "_________________________________________STASHES";  gstl; echo ""; \
           echo "_________________________________________BRANCHES"; gb;   echo "";'

alias mygc='gcc -g -Wall -std=c11'

alias v='vim'
alias ll='ls -alF --color=auto'
alias eu='du -ahd1 | sort -h'
alias mkd='mkdir'
alias sau='sudo apt upgrade'

alias myjpg='jpegoptim --force --all-progressive --strip-all --totals'
alias mypng='optipng -strip all -i 0 -o7'
